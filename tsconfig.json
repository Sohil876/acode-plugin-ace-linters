{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"lib": ["DOM", "ESNext", "WebWorker"]
	},
	"exclude": ["./dist/**/*", "./postcss.config.js", "node_modules"]
}
